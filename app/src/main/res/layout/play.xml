<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/ScrollView1"

    android:layout_width="match_parent"

    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    >

    <!-- TextView를 RelativeLayout의 맨 위에 배치합니다. -->
    <TextView
        android:id="@+id/textView"
        android:text="굽은목 허리 다리 교정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/montserratbold"/>
    <!-- PlayerView(영상)를 TextView 아래에 배치합니다. -->


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView2"
        android:text="등근육 척추 교정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/montserratbold"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textView2"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView3"
        android:text="다리 어깨 교정"
        android:fontFamily="@font/montserratbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />
    <!-- PlayerView(영상)를 TextView 아래에 배치합니다. -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textView3"
        android:layout_centerInParent="true" />
    <!-- 하단 메뉴바 (하단에 위치) -->

</RelativeLayout>
</ScrollView>